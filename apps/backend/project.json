{
	"name": "backend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "backend",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go build -o dist/backend ./backend/...",
				"cwd": "backend",
				"outputPath": "dist/backend"
			}
		},
		"serve": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run .",
				"cwd": "backend"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go test ./... -v",
				"cwd": "backend"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "sh -c 'go list -f \"{{.Dir}}\" ${*} | uniq | xargs -I {} golangci-lint run --path {}'",
				"cwd": "backend"
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"command": "sh -c 'go list -f \"{{.Dir}}\" ${*} | uniq | xargs -I {} golangci-lint run --path {}'",
				"cwd": "backend"
			}
		},
		"export-openapi": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run cmd/export-spec/main.go",
				"cwd": "apps/backend"
			},
			"outputs": ["{workspaceRoot}/packages/api-spec/openapi.json"]
		}
	},
	"tags": ["type:app", "lang:go", "scope:backend"]
}
