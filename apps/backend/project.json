{
	"name": "backend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "backend",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go build -o dist/backend ./backend/...",
				"cwd": "backend",
				"outputPath": "dist/backend"
			}
		},
		"serve": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run .",
				"cwd": "backend"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go test ./... -v",
				"cwd": "backend"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "golangci-lint run --fast",
				"cwd": "backend"
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go fmt ./... && golangci-lint run --fix",
				"cwd": "backend"
			}
		}
	},
	"tags": ["scope:backend"]
}
