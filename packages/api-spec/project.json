{
	"name": "api-spec",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "packages/api-spec",
	"projectType": "library",
	"targets": {
		"generate": {
			"executor": "nx:run-commands",
			"dependsOn": ["backend:export-openapi"],
			"options": {
				"commands": ["echo 'OpenAPI spec generated by backend'"]
			},
			"outputs": ["{projectRoot}/openapi.json"]
		},
		"validate": {
			"executor": "nx:run-commands",
			"options": {
				"command": "npx @apidevtools/swagger-cli validate openapi.json",
				"cwd": "packages/api-spec"
			}
		}
	},
	"tags": ["type:spec"]
}
