{
	"name": "backend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/backend",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go build -o ../../dist/apps/backend/backend ./cmd/api",
				"cwd": "apps/backend"
			},
			"outputs": ["{workspaceRoot}/dist/apps/backend"]
		},
		"serve": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run ./cmd/api",
				"cwd": "apps/backend"
			}
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go test ./... -v",
				"cwd": "apps/backend"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "golangci-lint run ./...",
				"cwd": "apps/backend"
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"command": "gofmt -w .",
				"cwd": "apps/backend"
			}
		},
		"export-openapi": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run cmd/export-spec/main.go",
				"cwd": "apps/backend"
			},
			"outputs": ["{workspaceRoot}/packages/api-spec/openapi.json"]
		}
	},
	"tags": ["type:app", "lang:go", "scope:backend"]
}
