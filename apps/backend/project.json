{
	"name": "backend",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/backend",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go build -o ../../dist/apps/backend/backend ./cmd/api",
				"cwd": "apps/backend"
			},
			"outputs": ["{workspaceRoot}/dist/apps/backend"]
		},
		"serve": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run ./cmd/api",
				"cwd": "apps/backend"
			}
		},
		"dev": {
			"executor": "nx:run-commands",
			"options": {
				"command": "air",
				"cwd": "apps/backend"
			},
			"cache": false
		},
		"test": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go test ./... -v",
				"cwd": "apps/backend"
			}
		},
		"lint": {
			"executor": "nx:run-commands",
			"options": {
				"command": "golangci-lint run ./...",
				"cwd": "apps/backend"
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"command": "gofmt -w .",
				"cwd": "apps/backend"
			}
		},
		"export-openapi": {
			"executor": "nx:run-commands",
			"cache": true,
			"options": {
				"command": "go run cmd/export-spec/main.go",
				"cwd": "apps/backend"
			},
			"outputs": ["{workspaceRoot}/packages/api-spec/openapi.json"]
		},
		"migration:list": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run ./cmd/schema -action=list",
				"cwd": "apps/backend"
			}
		},
		"migration:generate": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run cmd/schema/main.go -action=generate -name={args.name}",
				"cwd": "apps/backend"
			}
		},
		"migration:apply": {
			"executor": "nx:run-commands",
			"options": {
				"command": "go run ./cmd/schema -action=apply",
				"cwd": "apps/backend"
			}
		},
		"migration:debug": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"pwd",
					"echo 'Looking for backend directory...'",
					"find . -name 'cmd' -type d -print 2>/dev/null",
					"find . -name 'schema' -type d -print 2>/dev/null",
					"echo 'Common backend locations:'",
					"ls -la apps/ 2>/dev/null || echo 'No apps directory'",
					"ls -la packages/ 2>/dev/null || echo 'No packages directory'",
					"ls -la services/ 2>/dev/null || echo 'No services directory'"
				],
				"parallel": false,
				"cwd": "."
			}
		}
	},
	"tags": ["type:app", "lang:go", "scope:backend"]
}
