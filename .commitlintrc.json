{
	"extends": ["@commitlint/config-conventional"],
	"rules": {
		"type-enum": [
			2,
			"always",
			[
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"test",
				"chore",
				"perf",
				"ci",
				"revert"
			]
		],
		"scope-enum": [2, "always", ["backend", "mobile", "web", "shared"]],
		"body-max-line-length": [2, "always", 100]
	}
}
